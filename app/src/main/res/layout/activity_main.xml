<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityScreens.MainActivity"
    android:background="@color/backgroundFocus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_game">
                <Button
                    android:id="@+id/main_register_btn"
                    android:layout_width="@dimen/largeIcon"
                    android:layout_height="@dimen/largeIcon"
                    android:background="@drawable/baseline_create_black_48"
                    android:backgroundTint="@color/white" />
            </FrameLayout>

            <TextView
                android:id="@+id/main_register_txt"
                android:layout_width="@dimen/largeIcon"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/white"
                android:background="@drawable/rounded_text"
                android:backgroundTint="@color/gameBtn"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_chat">

                <Button
                    android:id="@+id/main_login_btn"
                    android:layout_width="@dimen/largeIcon"
                    android:layout_height="@dimen/largeIcon"
                    android:background="@drawable/baseline_login_black_48"
                    android:backgroundTint="@color/white"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/main_login_txt"
                android:layout_width="@dimen/largeIcon"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:background="@drawable/rounded_text"
                android:backgroundTint="@color/chatBtn"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>