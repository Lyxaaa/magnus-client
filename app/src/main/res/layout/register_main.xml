<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darker80"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/credentialsViewWidth"
        android:layout_height="@dimen/credentialsViewHeight"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/credentialsDefault" />

        <EditText
            android:id="@+id/register_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#777777"></EditText>

        <EditText
            android:id="@+id/register_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#777777"></EditText>

        <EditText
            android:id="@+id/register_confirm_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="confirm password"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#777777"></EditText>

        <Button
            android:id="@+id/submit_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0099FF"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>