<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darker80"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/credentialsViewWidth"
        android:layout_height="@dimen/credentialsViewHeight"
        android:background="@color/backgroundFocus"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:textAlignment="center"
            android:textColor="@color/lighter"
            android:textColorHint="@color/light"></EditText>

        <EditText
            android:id="@+id/login_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:textAlignment="center"
            android:textColor="@color/lighter"
            android:textColorHint="@color/light"></EditText>

        <CheckBox
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="remember me"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/submit_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0099FF"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/credentialsDefault" />

    </LinearLayout>
</LinearLayout>